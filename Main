        self.Model = MathematicalModel.MathematicalModel(config.T, config.d, config.mu, config.sigma, config.g, config.xi)
        self.NN = NN.NN(c1, self.Model, log)
        self.config = config

        self.N = config.N

        self.log = log
        self.out = out

    def MainSchleife(self):
